<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tekknow.bicentenario.tbcomplus.UserCardReadActivity">

        <!-- AppBar -->
        <include layout="@layout/_appbar" />

        <!-- Footer -->
        <include layout="@layout/_footer" />

        <RelativeLayout
            android:layout_below="@id/appbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_all_layout"
            android:layout_above="@id/footer">

                <Button
                    android:id="@+id/btn_cancel"
                    style="@style/HomeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/margin_top_layout"
                    android:onClick="onCancel"
                    android:text="@string/txt_cancel" />

                <TextView
                    android:id="@+id/txt_card_read"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/btn_cancel"
                    style="@style/Message"
                    android:gravity="center"
                    android:text="@string/action_card_user_read" />
        </RelativeLayout>

</RelativeLayout>