<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Footer -->
    <include layout="@layout/_footer" />

    <RelativeLayout
        android:layout_above="@id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/label_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            style="@style/Label"
            android:text="@string/action_transfer_amount_enter" />

        <EditText
            android:id="@+id/txt_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_amount"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/label_account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            style="@style/Label"
            android:layout_below="@id/txt_amount"
            android:text="@string/action_deposit_enter_account" />

        <EditText
            android:id="@+id/txt_acount_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_account_number"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/label_ci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@id/txt_acount_number"
            style="@style/Label"
            android:text="@string/action_ci_enter" />

        <EditText
            android:id="@+id/txt_ci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_ci"
            android:inputType="numberDecimal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_execute"
                style="@style/HomeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="execute"
                android:text="@string/txt_process" />

            <Button
                android:id="@+id/btn_back"
                style="@style/HomeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="onReturn"
                android:text="@string/txt_back" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>