<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar -->
    <include layout="@layout/_appbar" />

    <!-- Footer -->
    <include layout="@layout/_footer" />

    <RelativeLayout
        android:layout_above="@id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:layout_margin="@dimen/margin_all_layout">

        <LinearLayout
            android:layout_above="@id/btn_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_top_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Label"
                android:text="@string/action_deposit_enter_account" />

            <com.tekknow.bicentenario.tbcomplus.widget.AccountEditText
                android:id="@+id/input_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <TextView
                android:id="@+id/label_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_form"
                style="@style/Label"
                android:text="@string/action_deposit_amount_enter" />

            <com.tekknow.bicentenario.tbcomplus.widget.AmountEditText
                android:id="@+id/input_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_layout"
            android:layout_alignParentBottom="true">

            <com.tekknow.bicentenario.tbcomplus.widget.FocusableButton
                android:id="@+id/btn_execute_deposit"
                style="@style/HomeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_accept" />

            <Button
                android:id="@+id/btn_back"
                style="@style/HomeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="onReturn"
                android:text="@string/txt_back" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
