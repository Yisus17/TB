<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tekknow.bicentenario.tbcomplus.AccountTypeActivity">

    <!-- Footer -->
    <include layout="@layout/_footer"
        android:id="@+id/include" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/relativeLayout"
        android:layout_above="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txt_balance"
            style="@style/Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="Saldo Actual: 25,00" />

        <TextView
            android:id="@+id/txt_select_account_type"
            style="@style/Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/txt_balance"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="@string/action_amount_type_select" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/grp_amount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_select_account_type"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/opt_1"
                style="@style/Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100,00" />

            <RadioButton
                android:id="@+id/opt_2"
                style="@style/Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opt_1"
                android:text="200,00" />

            <RadioButton
                android:id="@+id/opt_3"
                style="@style/Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opt_2"
                android:text="500,00" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_accept"
                style="@style/HomeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="accept"
                android:text="@string/txt_accept" />

            <Button
                android:id="@+id/btn_back"
                style="@style/HomeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="cancel"
                android:text="@string/txt_back" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
